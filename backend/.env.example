# Backend (.env.example)
# Copy to .env and fill values

# MySQL connection string (Pomelo / EF Core)
# Example:
# Server=localhost;Port=3306;Database=shipping_platform;User=root;Password=pass;TreatTinyAsBoolean=true;
ConnectionStrings__MySql=Server=localhost;Port=3306;Database=shipping_platform;User=root;Password=pass;

# Seed admin user (created if not exists)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeMeStrongPassword!

# JWT (recommended for SPA)
JWT__Issuer=ShippingPlatform
JWT__Audience=ShippingPlatform.Admin
JWT__SigningKey=ChangeThisToALongRandomSecretKey_AtLeast32Chars
JWT__ExpiryMinutes=720

# Azure Blob Storage
AzureBlob__ConnectionString=DefaultEndpointsProtocol=https;AccountName=YOUR_ACCOUNT;AccountKey=YOUR_KEY;EndpointSuffix=core.windows.net
AzureBlob__MediaContainer=media
AzureBlob__ExportsContainer=exports

# CORS (frontend dev server)
Cors__AllowedOrigins__0=http://localhost:5173
